{ pkgs ? import <nixpkgs> {} }:
pkgs.mkShell {
    shellHook = ''
        alias ll="ls -l"
        export PS1="\[\e[0m\]\w\[\e[0m\]#\[\e[0m\] "
        export LANG=en_US.UTF-8
    '';
    packages = [
        # env
        pkgs.gcc11
        pkgs.gnumake
        pkgs.openssl
        pkgs.sqlite
        pkgs.jsoncpp
        # unitTest
        pkgs.cunit
        pkgs.gtest
        pkgs.cmake
        pkgs.pkg-config
        pkgs.boost175
        pkgs.icu
        # lsp
        pkgs.ccls
        pkgs.glibcLocales
        # GUI
        pkgs.tigervnc
        pkgs.fluxbox
        pkgs.python39Packages.websockify
        pkgs.pulseaudio
    ];
}